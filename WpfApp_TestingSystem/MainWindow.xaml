<Window x:Class="WpfApp_TestingSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_TestingSystem"
        mc:Ignorable="d"
        FontSize="12"
        Title="MainWindow" Height="450" Width="800"
        Background="WhiteSmoke">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DictionaryStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Menu-->
        <DockPanel Grid.Row="0" LastChildFill="False">

            <Grid DockPanel.Dock="Top">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <ToolBarTray Grid.Column="0" HorizontalAlignment="Left">
                    <ToolBar>
                        <Button Name="buttonMenuBack" Click="buttonMenuBack_Click">Назад</Button>
                    </ToolBar>
                </ToolBarTray>

                <ToolBarTray Grid.Column="1"
                                 HorizontalAlignment="Right">
                    <ToolBar>
                        <Button Name="buttonMenuUsersExit" Click="buttonMenuUsersExit_Click">Выход</Button>
                    </ToolBar>
                </ToolBarTray>

            </Grid>

        </DockPanel>

        <!--Select User Type-->
        <Grid Grid.Row="0" Name="gridUserTypeSelection" 
              Background="Gainsboro" d:IsHidden="True"
              Grid.RowSpan="2"
              >
            <!--Temp Visibility="Hidden"-->

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <!--<RowDefinition Height="Auto"/>-->
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                       Text="Выберите тип пользователя:"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0 0 0 25"
                       FontSize="15"/>
            <Button Grid.Row="2" Grid.Column="0"
                    Name="buttonTeacher"
                    HorizontalAlignment="Right"
                    Margin="0 0 20 0"
                    Padding="20 10 20 10"
                    FontSize="15"
                    Background="Red">
                Учитель
            </Button>
            <Button Grid.Row="2" Grid.Column="1"
                    Name="buttonStudent"
                    HorizontalAlignment="Left"
                    Margin="20 0 0 0 "
                    Padding="20 10 20 10"
                    FontSize="15"
                    Background="RoyalBlue">
                Студент
            </Button>
            
        </Grid>

        <!--Select Category or all Test-->
        <Grid Grid.Row="1" Name="gridCategoryOrAllTest"
              Background="WhiteSmoke"
              Visibility="Hidden"
              >

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <!--<RowDefinition Height="Auto"/>-->
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Grid.Row="1" Name="buttonAllTests"
                    HorizontalAlignment="Center"
                    Margin="0 0 0 20"
                    Padding="20 10 20 10"
                    FontSize="15">
                Все тесты
            </Button>
            <Button Grid.Row="2" Name="buttonCategory"
                    HorizontalAlignment="Center"
                    Margin="0 20 0 0"
                    Padding="20 10 20 10"
                    FontSize="15">
                По категории
            </Button>

        </Grid>

        <!--Selection Entity-->
        <Grid Grid.Row="1" Name="gridSelection"
              Visibility="Hidden">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            
            <!--All Header-->
            <Grid Grid.Row="1" 
                  Background="Gainsboro"
                  HorizontalAlignment="Left"
                  Width="{Binding ElementName=stackPanelSelection, Path=ActualWidth}">

                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!--Header Category-->
                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                      Name="gridHeaderCategory"
                      Visibility="Hidden">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Style="{StaticResource styleTextBlockForHeaderNumber}">
                        №</TextBlock>
                    <TextBlock Grid.Column="1" 
                               Style="{StaticResource styleTextBlockForHeaderText}">
                        Название категории</TextBlock>
                    <TextBlock Grid.Column="2" TextWrapping="Wrap"
                               Style="{StaticResource styleTextBlockForHeaderNumber}"
                               Padding="0 5 0 5">
                        Кол-во тестов</TextBlock>
                    
                </Grid>

                <!--Header Test-->
                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                      Name="gridHeaderTest"
                      Visibility="Hidden">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Style="{StaticResource styleTextBlockForHeaderNumber}">
                        №</TextBlock>
                    <TextBlock Grid.Column="1" 
                               Style="{StaticResource styleTextBlockForHeaderText}">
                        Название теста</TextBlock>
                    <TextBlock Grid.Column="2" 
                               Style="{StaticResource styleTextBlockForHeaderNumber}"
                               Padding="0 5 0 5">
                        Категория</TextBlock>
                    <TextBlock Grid.Column="3" TextWrapping="Wrap"
                               Style="{StaticResource styleTextBlockForHeaderNumber}"
                               Padding="0 5 0 5">
                        Кол-во вопросов</TextBlock>

                </Grid>

                <!--Header Question-->
                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                      Name="gridHeaderQuestion"
                      Visibility="Hidden">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Style="{StaticResource styleTextBlockForHeaderNumber}">
                        №</TextBlock>
                    <TextBlock Grid.Column="1"
                               Style="{StaticResource styleTextBlockForHeaderText}">
                        Вопрос</TextBlock>
                    <TextBlock Grid.Column="2" TextWrapping="Wrap"
                               Style="{StaticResource styleTextBlockForHeaderNumber}"
                               Padding="0 5 0 5">
                        Кол-во ответов</TextBlock>

                </Grid>

                <!--Header Answer-->
                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                      Name="gridHeaderAnswer"
                      Visibility="Hidden">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Style="{StaticResource styleTextBlockForHeaderNumber}">
                        №</TextBlock>
                    <TextBlock Grid.Column="1"
                               Style="{StaticResource styleTextBlockForHeaderText}">
                        Ответ</TextBlock>
                    <TextBlock Grid.Column="2" TextWrapping="Wrap"
                               Style="{StaticResource styleTextBlockForHeaderNumber}"
                               Padding="0 5 0 5">
                        Результат</TextBlock>

                </Grid>

            </Grid>


            <!--Scroll Viewer-->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    
                    <!--Первая невидимая строка для привязки к ней размера grid в Кнопке-->
                    <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                               Name="textBlockHiddenForSizeButtonLine"
                               Height="0"/>

                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" 
                                Name="stackPanelSelection"/>

                </Grid>
            </ScrollViewer>
            
            <!--For button "Add"-->
            <Grid Grid.Row="3"
                  Name="gridForButtonAddEntity">

                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
            </Grid>

        </Grid>

        <!--TODO delete ?-->
        <!--<Grid Grid.Row="1" Name="gridTestSelection"
              Background="Beige"
              Visibility="Hidden">

            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TabControl Name="tabControlForStudent">
                <TabItem Header="Полный список">
                    <ListBox Name="listBoxAllTests"/>
                </TabItem>
                <TabItem Header="Категории">
                    Размещение категорий
                </TabItem>
            </TabControl>
        </Grid>-->

        
        <!--Страница прохождения теста-->
        <Grid Grid.Row="0" Name="gridPassingTheTest"
              Visibility="Hidden"
              Grid.RowSpan="2"
              Background="WhiteSmoke">
            <!--Visibility="Hidden"-->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <!--<RowDefinition />-->
            </Grid.RowDefinitions>

            <!--Title-->
            <TextBlock Grid.Row="0" Name="textBlockPassing_Title"
                       Padding="15"/>
            <!--Question-->
            <TextBlock Grid.Row="1" Name="textBlockPassing_Question"
                       Background="Gainsboro"
                       TextWrapping="Wrap"
                       FontSize="14"
                       Padding="15"/>
            <!--Answer-->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"
                    Background="White"
                    Margin="15"
                    Padding="5 10 5 10">
                <StackPanel Name="stackPanelPassing_Answer">
                    <!--<Grid.RowDefinitions></Grid.RowDefinitions>-->

                </StackPanel>
            </ScrollViewer>
            <!--Reply-->
            <Button Grid.Row="3" Name="buttonPassing_Reply"
                    Margin="0 0 0 15"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                Ответить
            </Button>
            <!--Empty Block-->
            <!-- -->
            
        </Grid>
        
    </Grid>
</Window>
